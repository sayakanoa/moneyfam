<!DOCTYPE html>
<html>
  <head>
    <title>Moneyfam</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/8683c470f0.js" crossorigin="anonymous"></script>

    <style>
    @import url('https://fonts.googleapis.com/css2?family=Yomogi&family=Yuji+Mai&family=Zen+Kurenaido&display=swap');
    </style>
  </head>


  <body>
      <header class="", style="background-color:#d3d3d3">
          <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container-fluid">
              <a class="navbar-brand float-left pl-2 col-4" style="" href="/"><%= image_tag('logo.jpg', style: "width:60%;") %></a>
              <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse mx-auto" id="navbarNavDropdown">
                <ul class="navbar-nav ml-auto float-right list-unstyled">
                  <% if user_signed_in? %>
                    <li class="nav-list-item">
                      <%= link_to about_path, class: 'nav-link text-dark' do %>
                      使い方<i class="fas fa-search"></i>
                      <% end %>
                    </li>

                    <li class="nav-list-item">
                      <%= link_to user_path(current_user.id), class: 'nav-link text-dark' do%>
                      マイページ<i class="far fa-user"></i>
                      <% end %>
                    </li>

                    <li class="nav-list-item">
                      <%= link_to users_path, class: 'nav-link text-dark' do %>
                      ユーザー一覧<i class="fas fa-users"></i>
                      <% end %>
                    </li>

                    <li class="nav-list-item">
                      <%= link_to notifications_path, class: 'nav-link text-dark' do %>
                      通知機能<i class="far fa-bell"></i>
                      <% end %>
                    </li>

                    <li class="nav-list-item">
                      <%= link_to destroy_user_session_path, method: :delete, class: 'nav-link text-dark' do %>
                      ログアウト<i class="fas fa-sign-out-alt"></i>
                      <% end %>
                    </li>

                  <% else %>

                    <li class="nav-list-item">
                      <%= link_to about_path, class: 'nav-link text-dark' do %>
                      使い方<i class="fas fa-search"></i>
                      <% end %>
                    </li>

                    <li class="nav-list-item">
                      <%= link_to new_user_registration_path, class: 'nav-link text-dark' do %>
                      新規登録<i class="fas fa-user-plus"></i>
                      <% end %>
                    </li>

                    <li class="nav-list-item">
                      <%= link_to new_user_session_path, class: 'nav-link text-dark' do %>
                      ログイン<i class="fas fa-sign-in-alt"></i>
                      <% end %>
                    </li>

                  <% end %>

                  </ul>
              </div>
          </div>
          </nav>

          <div class="row pl-5">
            <p id="notice"><%= notice %></p>
            <p id="alert"><%= alert %></p>
          </div>

      </header>

      <main style="background-color:#fffacd">
        <%= yield %>
      </main>

      <footer class="py-2", style="background-color:#d3d3d3">
        <p class="text-light text-center">© All rights reserved by moneyfam.</p>
      </footer>
  </body>
</html>
