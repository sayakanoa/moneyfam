<h2>プロフィール編集</h2>

<%= form_with model:@user, local:true do |f| %>

  <label for="inputName">名前</label>
  <%= f.text_field :name, autofocus: true, id:"inputName" %>

　<%= f.label :introduction, '自己紹介' %><br />
　<%= f.text_field :introduction, autofocus: true %>

　<%= f.label :money_type, '価値観' %><br />
　<%= f.select :money_type, User.money_types_i18n.keys.map {|k| [User.money_types_i18n[k], k]} %>

  <%= f.submit "変更を保存" %>
<% end %>