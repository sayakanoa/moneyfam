<div class="container py-5">
<h1 class="text-center">今年の家計簿</h1>


        <%= link_to payments_path(user_id: params[:user_id], month: @month.prev_year) do %>
        <button class="btn btn-outline-dark">前年の家計簿はこちら</button>
        <% end %>

        <table class="table">
            <tr>
                <th><h3>年月</h3></th>

                    <% @lists[:month].zip(@lists[:id]).each do |m, id| %>
                    <th>
                    <%= link_to payment_path(id) do %>
                    <h3><%= m.strftime("%-m月") %></h3>
                    <% end %>
                    </th>
                    <% end %>

            </tr>
            <tr>
                <th><h3>家賃</h3></th>
                <%  @lists[:house].each do |h| %>
                <td><%= h %></td>
                <% end %>
            </tr>
            <tr>
                <td><h3>生活費</h3></td>
                <%  @lists[:life].each do |l| %>
                <td><%= l %></td>
                <% end %>
            <tr>
            <tr>
                <td><h3>食費</h3></td>
                <%  @lists[:food].each do |f| %>
                <td><%= f %></td>
                <% end %>
            </tr>
            <tr>
                <td><h3>自由費</h3></td>
                <%  @lists[:enjoy].each do |e| %>
                <td><%= e %></td>
                <% end %>
            </tr>
            <tr>
                <td><h3>貯金</h3></td>
                <%  @lists[:saving].each do |s| %>
                <td><%= s %></td>
                <% end %>
            </tr>
            <tr>
                <td><h3>資産運用</h3></td>
                <%  @lists[:investing].each do |i| %>
                <td><%= i %></td>
                <% end %>
            </tr>
            <tr>
                <td><h3>その他</h3></td>
                <%  @lists[:other].each do |o| %>
                <td><%= o %></td>
                <% end %>
            </tr>
            <tr>
                <th><h3>合計金額</h3></th>
                <%  @lists[:sum].each do |s| %>
                <td><%= s %></td>
                <% end %>
            </tr>


        </table>

</div>